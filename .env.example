# TopStep API Token
# Get your API token from TopStep dashboard and set it here
TOPSTEP_API_TOKEN=your_api_token_here

# Environment Configuration
BOT_ENVIRONMENT=production  # development, staging, or production

# Dry Run Mode (set to false for live trading)
BOT_DRY_RUN=false

# Trading Parameters
BOT_INSTRUMENT=MES
BOT_TIMEZONE=America/New_York
BOT_RISK_PER_TRADE=0.01  # 1% of account
BOT_MAX_CONTRACTS=2
BOT_MAX_TRADES_PER_DAY=3
BOT_RISK_REWARD_RATIO=1.5

# Safety Parameters
BOT_DAILY_LOSS_LIMIT=200.0
BOT_MAX_DRAWDOWN_PERCENT=5.0

# Instrument Specifications
BOT_TICK_SIZE=0.25
BOT_TICK_VALUE=1.25
